<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NewYourDiscordRpc.App">
  <Application.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>

    <StyleInclude Source = "/Styles/Buttons.xml" />
    <StyleInclude Source = "/Styles/TabControl.xml" />

    <Style Selector="StackPanel#Tabs Button">
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
    <Style Selector="StackPanel#Tabs Button /template/ ContentPresenter">
        <Setter Property="CornerRadius" Value="5,5,0,0"/>
    </Style>
    
    <Style Selector="StackPanel#Tabs Button[Tag=Selected]">
        <Setter Property="Margin" Value="0,3,0,0"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
    </Style>
    
    <Style Selector="ScrollViewer.MSV.Hide">
        <Setter Property="Width" Value="0"></Setter>
    </Style>

    <Style Selector="ScrollViewer.MSV.Show">
        <Setter Property="Width" Value="150"></Setter>
    </Style>

</Application.Styles>
<Application.Resources>
  <Template x:Key="Tab">

  </Template>
</Application.Resources>
</Application>
